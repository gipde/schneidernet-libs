{
  "name": "@schneidernet/tools",
  "version": "0.0.8",
  "description": "several tools",
  "main": "dist/tools.cjs.js",
  "module": "dist/tools.esm.js",
  "browser": "dist/tools.umd.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "pnpm clean && rollup -c && tsc ",
    "test": "jest --coverage",
    "lint": "eslint ./src --ext .jsx,.js,.ts,.tsx --quiet --fix --ignore-path ./.gitignore",
    "format": "prettier  --loglevel warn --write \"./**/*.{ts,md,js,yaml,json}\" ",
    "formatCheck": "prettier  --check \"./**/*.{ts,tsx,md,js,jsx,yaml,json}\" ",
    "check": "pnpm format && pnpm lint && pnpm test",
    "pub": "pnpm check && pnpm build && pnpm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gipde/schneidernet-tools.git"
  },
  "author": "",
  "license": "GPLv3",
  "bugs": {
    "url": "https://github.com/gipde/schneidernet-tools/issues"
  },
  "homepage": "https://github.com/gipde/schneidernet-tools#readme",
  "dependencies": {
    "chalk": "^4.1.2",
    "date-fns": "^2.27.0",
    "loglevel": "^1.8.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "^16.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^27.4.3",
    "pre-commit": "^1.2.2",
    "rollup": "^2.60.2",
    "rollup-plugin-polyfill-node": "^0.8.0",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^27.0.7",
    "typescript": "^4.5.2"
  },
  "pre-commit": [
    "check"
  ]
}
